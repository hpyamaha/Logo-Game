<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.logogame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.logogame.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.logogame.PlaygroundActivity"
            android:label="@string/title_activity_playground"
            android:parentActivityName="com.example.logo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.logo" />
        </activity>
        <activity
            android:name="com.example.logogame.CorrectActivity"
            android:label="@string/title_activity_correct"
            android:parentActivityName="com.exapmple.logogame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.exapmple.logogame" />
        </activity>
        <activity
            android:name="com.example.logogame.WrongActivity"
            android:label="@string/title_activity_wrong"
            android:parentActivityName="com.example.logogame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.logogame" />
        </activity>
        <activity
            android:name="com.example.logogame.QuestionActivity"
            android:label="@string/title_activity_question"
            android:parentActivityName="com.example.logogame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.logogame" />
        </activity>
        <activity
            android:name="com.example.logogame.GameoverActivity"
            android:label="@string/title_activity_gameover"
            android:parentActivityName="com.example.logogame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.logogame" />
        </activity>
    </application>

</manifest>